{
  "name": "@ngx-plus/ngx-stack",
  "version": "0.0.0",
  "description": "Advanced Angular Stack",
  "author": "Brannon N. Darby II (logic) <bdarby86@gmail.com>",
  "keywords": [
    "admin",
    "angular",
    "angular 2",
    "angular 4",
    "docker",
    "express",
    "fireloop",
    "full stack",
    "full-stack",
    "lerna",
    "loopback",
    "mean",
    "module",
    "mongo",
    "mongodb",
    "ngx",
    "ngx-admin",
    "ngx-plus",
    "ngx-stack",
    "node",
    "nrwl",
    "nx",
    "real-time",
    "realtime",
    "static"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-plus/ngx-stack.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "ng build --prod --output-path ./api/dist",
    "clean": "node bin/clean",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "ng serve --proxy-config proxy.conf.json",
    "docker:build": "docker build -t ngxp/ngx-stack .",
    "docker:run": "docker run -it --name ngx-stack -p 8080:8080 --rm ngxp/ngx-stack",
    "format": "prettier --single-quote --no-semi --trailing-comma es5  --print-width 120 --write \"{apps,libs}/**/*.ts\"",
    "initdb": "cd apps/api && node bin/initdb",
    "postinstall": "cd apps/api && npm install",
    "lint": "ng lint",
    "ng": "ng",
    "sdk": "fireloop sdk",
    "stack": "npm run stack:start",
    "stack:logs": "docker-compose -f docker-compose.yml logs -f",
    "stack:rm": "npm run stack:stop && docker-compose rm -f",
    "stack:start": "docker-compose -f docker-compose.yml up -d",
    "stack:stop": "docker-compose -f docker-compose.yml stop",
    "start": "cd apps/api && npm start",
    "test": "ng test",
    "update": "npm run update:api && npm run update:root",
    "update:api": "cd apps/api && ncu -a",
    "update:root": "ncu -a"
  },
  "dependencies": {
    "@angular/animations": "5.0.1",
    "@angular/common": "5.0.1",
    "@angular/compiler": "5.0.1",
    "@angular/core": "5.0.1",
    "@angular/forms": "5.0.1",
    "@angular/http": "5.0.1",
    "@angular/platform-browser": "5.0.1",
    "@angular/platform-browser-dynamic": "5.0.1",
    "@angular/router": "5.0.1",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-beta.5",
    "@ngrx/effects": "4.1.1",
    "@ngrx/entity": "4.1.1",
    "@ngrx/router-store": "4.1.1",
    "@ngrx/store": "4.1.1",
    "@ngrx/store-devtools": "4.1.1",
    "@ngx-plus/ngx-alerts": "0.4.5",
    "@ngx-plus/ngx-forms": "0.5.3",
    "@nrwl/nx": "0.1.1",
    "@swimlane/ngx-datatable": "11.0.4",
    "bootstrap": "4.0.0-beta.2",
    "core-js": "2.5.1",
    "font-awesome": "4.7.0",
    "lodash": "4.17.4",
    "loopback-filters": "0.1.3",
    "ngx-loading": "1.0.8",
    "ngx-uploader": "4.2.1",
    "rxjs": "5.5.2",
    "simple-line-icons": "2.4.1",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "nrwl/fix-cli-build",
    "@angular/compiler-cli": "5.0.1",
    "@angular/language-service": "5.0.1",
    "@nrwl/schematics": "0.1.1",
    "@types/lodash": "4.14.85",
    "@types/node": "8.0.51",
    "codelyzer": "4.0.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "prettier": "1.8.2",
    "protractor": "5.2.0",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typescript": "2.6.1"
  }
}
